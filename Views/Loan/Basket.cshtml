@using Library.Models.ViewModels
@model List<LoanViewModel>

<h2 style="text-align:center">سبد کتاب ها</h2>
<div class="row">
    <div class="col-12" style="text-align:center">
        <p style="color:red">
            @TempData["Message"]
        </p>
    </div>
</div>
<div class="row basket-row">
    <div class="col-md-3"></div>
    <table class="table table-striped table-style col-md-6" style="text-align:center">
        <thead>
            <tr>
                <th>نام کتاب</th>
                @* <td></td> *@
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var item in Model)
                {
                    <td>@item.BookName</td>
                    <td>
                        <a asp-action="RemoveFromBasket" asp-controller="Loan"
                           asp-route-bookId="@item.BookId" class="btn btn-danger">حذف</a>
                    </td>
                }
            </tr>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2">
                    <a href="@Url.Action("SaveBasketLoan","Loan")" class="btn btn-success btn-lg">ثبت نهایی </a>
                    @* </td> *@
                    @* <td> *@
                    <a href="@Url.Action("ShowBookList","Book")" class="btn btn-success btn-lg">بازگشت به لیست کتاب ها </a>
                </td>
            </tr>
        </tfoot>
    </table>
    <div class="col-md-3"></div>
</div>

    


